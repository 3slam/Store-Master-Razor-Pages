@page
@model StoreMaster.Pages.Categories.DeleteModel
 
<form method="post" >

    <input asp-for="Category.CategoryId" hidden />

    <div class="border p-3 mt-4">

        <h2 style="color:red">Delete Category</h2>
     
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name"  disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Category.Description" class="p-0"></label>
            <input value="@Html.Raw(Model.Category.Description)"  disabled class="form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/DisplayAllCategories" class="btn btn-primary form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
