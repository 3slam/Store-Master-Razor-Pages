@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
 
<div class="row pb-3">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded"> 
                      
                            <img src="@product.ImageUrl" class="card-img-top rounded" style="height:260px"/>
                    
                        
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                                <p class="text-center">@product.Description</p>
                            </div>
                             
                             
                            <div class="pl-1">
                                <p class="text-danger text-opacity-75 text-center">Price: 
                                    <span>
                                        @product.Price
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-page="/Products/Details"  asp-route-ProductId="@product.ProductId"
                            class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>