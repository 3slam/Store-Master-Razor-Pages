@page
@model StoreMaster.Pages.Products.EditModel

<form method="post" enctype="multipart/form-data">

    <div class="border p-3 mt-4">

        <h2 style="color:red">Edit Product</h2>

          <div asp-validation-summary="All"></div>

        <input asp-for="Product.ProductId"  hidden class="form-control" />
        <input asp-for="Product.ImageUrl" hidden class="form-control" />

        <div class="row mb-3">
            <div class="col-md-9">
                <div class="mb-3 p-1">
                    <label asp-for="Product.Name" class="p-0"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Product.Description" class="p-0"></label>
                    <input asp-for="Product.Description" class="form-control" ></input>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Product.Author" class="p-0"></label>
                    <input asp-for="Product.Author" class="form-control" />
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Product.Price" class="p-0"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Product.Price50" class="p-0"></label>
                    <input asp-for="Product.Price50" class="form-control" />
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Product.Price100" class="p-0"></label>
                    <input asp-for="Product.Price100" class="form-control" />
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                  
                    <input type="file" name="file" class="form-control" id="imageInput" />
                
                </div>
            </div>

            <div class="col-md-3 d-flex  justify-content-end">
                <div class="mb-3 p-1">
                    <labelclass="p-0">Product Image</label>
                        <img id="productImage" class="img-fluid img-thumbnail" src="@Model.Product.ImageUrl" alt="Image" class="img-fluid" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-danger form-control">Create</button>
            </div>
            <div class="col-md-3">
                <a asp-page="/Products/DisplayAllProducts" class="btn btn-primary form-control">Back to List</a>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    <script>
        document.getElementById('imageInput').addEventListener('change', function () {
            var file = this.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('productImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial" />

}