@page
@model StoreMaster.Pages.ShoppingCarts.SummaryModel

 

<form method="post">
	<br />
	<div class="backgroundWhiteBorder">
		<div class="container">
			<div class="card">
				<div class="card-header bg-dark text-light ml-0 ">
					<div class="row">
						<div class="col-6 pt-2" asp-validation-summary="All">

							<input hidden asp-for="SummaryOrderViewModel.TotalPrice" class="form-control" />
							<input hidden asp-for="SummaryOrderViewModel.TotalNumberOfProducts" class="form-control" />
 
						</div>
						<div class="col-6 pt-2">
							<h3 class="text-white-50">Order Summary</h3>
						</div>
						<div class="col-6 text-end">
							<a asp-page="/ShoppingCarts/DisplayShoppingCart" 
							class="btn btn-outline-info btn-sm">Back to Cart</a>
						</div>
					</div>
				</div>
				<div class="card-body">
					<div class="container rounded p-2">
						<div class="row">
							<div class="col-12 col-lg-6 pb-4">
								<div class="row">
									<h4 class="d-flex justify-content-between align-items-center mb-3">
										<span class="text-info">PickUp Details:</span>
									</h4>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Name</label>
									</div>
									<div class="col-9">
										<input asp-for="OrderHeader.Name" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.Name" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Phone Number</label>
									</div>
									<div class="col-9">
										<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.PhoneNumber" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Pickup Date</label>
									</div>
									<div class="col-9">
										<input value="" asp-for="OrderHeader.OrderDate" type="date" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.OrderDate" class="text-danger"></span>
									</div>
								</div>
								 
								<div class="row my-1">
									<label>StreetAddress</label>
									<div class="col-9">
										<input asp-for="OrderHeader.StreetAddress" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.StreetAddress" class="text-danger"></span>
									</div>
								</div>

									<div class="row my-1">
									<label>StreetAddress</label>
									<div class="col-9">
										<input asp-for="OrderHeader.City" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.City" class="text-danger"></span>
									</div>
								</div>

								<div class="row my-1">
									<label>StreetAddress</label>
									<div class="col-9">
										<input asp-for="OrderHeader.PostalCode" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.PostalCode" class="text-danger"></span>
									</div>
								</div>

								<div class="row my-1">
									<label>State</label>
									<div class="col-9">
										<input asp-for="OrderHeader.State" class="form-control" />
										<span asp-validation-for="SummaryOrderViewModel.OrderHeader.State" class="text-danger"></span>
									</div>
								</div>
							</div>

							<div class="col-12 col-lg-5 offset-lg-1">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Order Summary:</span>
								</h4>
								  <ul>
									@foreach (var detail in Model.SummaryOrderViewModel.Items)
									{
										<li class="list-group-item d-flex justify-content-between">
											<div>
												<h6 class="my-0">@detail.Product.Name</h6>
												<small class="text-muted">Quantity: @detail.Count</small>
											</div>
											<span class="text-muted">$@(detail.Product.Price * @detail.Count)</span>
										</li>
									}
									<li class="list-group-item d-flex justify-content-between bg-light">
										<small class="text-info">Total (USD)</small>
										<strong class="text-info">$@Model.SummaryOrderViewModel.TotalPrice.ToString()</strong>
									</li>

								</ul>
							
                            </div>

						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="row">
						<div class="col-12 col-md-4 offset-md-8">
							<button type="submit" class="btn btn-outline-danger"
									asp-page-handler="placeholder">
								<i class="bi bi-trash-fill"></i>
							</button>
 						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
	 <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
      <script src="https://js.stripe.com/v3/"></script>
 	<partial name="_ValidationScriptsPartial"/>
	}
}